[gc]
  autoDetach = false
[color]
  ui = true
[core]
  editor = vim
[alias]
  merc = merge --no-ff
  st = status
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short -n 20
[merge]
  conflictstyle = diff3
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  features = side-by-side line-numbers decorations
  whitespace-error-style = 22 reverse
[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none